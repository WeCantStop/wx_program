<view class="section">
  <view class="section__title">翻滚吧萌狗</view>
  <scroll-view scroll-y class="scroll-view-container">
    <view wx:for="{{chatPlace}}" wx:for-item="imgUrl" wx:key="chatPlace.index">
     <image src="{{imgUrl.img}}"></image>
    </view>  
  </scroll-view>
</view>
<view class="map">
<map id="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="{{scale}}" controls="{{controls}}" bindcontroltap="controltap" markers="{{markers}}" circles="{{circles}}" polyline="{{polyline}}" bindmarkertap="markertap" bindregionchange="regionchange" show-location style="width: 100%; height: 300px;"></map>
</view>
