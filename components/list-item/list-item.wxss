/* components/list-item.wxss */
.list-item {
    height: 40rpx;
    line-height: 40rpx;
    font-size: 14px;
    padding: 20rpx;
    padding-bottom: 4px;
    padding-left: 30px;   
    margin: 0 20rpx;
    border-bottom: 1px solid #EEE;
    position: relative;
}
.list-tap {
  background: #fafafa;
}
.img-wrapper {
  width: 20px;
  height: 20px;
  position: absolute;
  left: 0;
  top: 9px;
}
.img-wrapper image {
  width: 100%;
  height: 100%;
}
.angle-right {
  width: 10px;
  height: 10px;
  right: 0;
  left: auto;
}